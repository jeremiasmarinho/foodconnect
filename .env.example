# FoodConnect Production Environment Configuration
# Copy this file to .env and configure with your production values

# ==========================================
# Database Configuration
# ==========================================
POSTGRES_DB=foodconnect
POSTGRES_USER=foodconnect
POSTGRES_PASSWORD=your_secure_password_here_32chars
DATABASE_URL=postgresql://foodconnect:your_secure_password_here_32chars@postgres:5432/foodconnect

# ==========================================
# Redis Configuration
# ==========================================
REDIS_PASSWORD=your_redis_password_here_32chars
REDIS_URL=redis://:your_redis_password_here_32chars@redis:6379

# ==========================================
# JWT & Security Configuration
# ==========================================
JWT_SECRET=your_super_secret_jwt_key_minimum_256_bits_long_random_string_here
JWT_EXPIRATION=24h
JWT_REFRESH_EXPIRATION=7d

# ==========================================
# VAPID Keys for Push Notifications
# ==========================================
# Generate these with: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=your_vapid_public_key_here
VAPID_PRIVATE_KEY=your_vapid_private_key_here
VAPID_EMAIL=admin@yourdomain.com

# ==========================================
# Application Configuration
# ==========================================
NODE_ENV=production
PORT=3001
FRONTEND_PORT=3000

# URLs for CORS and API communication
FRONTEND_URL=http://localhost
BACKEND_URL=http://localhost/api
API_PREFIX=api

# ==========================================
# File Upload Configuration
# ==========================================
MAX_FILE_SIZE=10485760
UPLOAD_DEST=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/gif

# ==========================================
# Rate Limiting Configuration
# ==========================================
RATE_LIMIT_TTL=900
RATE_LIMIT_LIMIT=100
AUTH_RATE_LIMIT_TTL=900
AUTH_RATE_LIMIT_LIMIT=5

# ==========================================
# Email Configuration (Optional)
# ==========================================
# SMTP_HOST=smtp.your-provider.com
# SMTP_PORT=587
# SMTP_USER=your-email@yourdomain.com
# SMTP_PASS=your-email-password
# SMTP_FROM=noreply@yourdomain.com

# ==========================================
# External Services (Optional)
# ==========================================
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1
# S3_BUCKET=your-s3-bucket-name

# ==========================================
# Monitoring & Logging
# ==========================================
LOG_LEVEL=info
ENABLE_CORS=true
TRUST_PROXY=true

# ==========================================
# SSL Configuration (for production)
# ==========================================
# HTTPS_ENABLED=true
# SSL_CERT_PATH=/path/to/certificate.crt
# SSL_KEY_PATH=/path/to/private.key

# ==========================================
# Backup Configuration
# ==========================================
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESSION=true

# ==========================================
# Performance Configuration
# ==========================================
DB_CONNECTION_LIMIT=10
REDIS_CONNECTION_LIMIT=10
REQUEST_TIMEOUT=30000

# ==========================================
# Feature Flags
# ==========================================
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_SOCIAL_LOGIN=false
ENABLE_IMAGE_OPTIMIZATION=true

# ==========================================
# Development/Debug (set to false in production)
# ==========================================
DEBUG=false
SWAGGER_ENABLED=true
ENABLE_LOGGING=true