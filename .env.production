# Database Configuration
POSTGRES_DB=foodconnect
POSTGRES_USER=foodconnect
POSTGRES_PASSWORD=changeme_in_production_123!
DATABASE_URL=postgresql://foodconnect:changeme_in_production_123!@postgres:5432/foodconnect

# Redis Configuration
REDIS_PASSWORD=changeme_redis_password_123!
REDIS_URL=redis://:changeme_redis_password_123!@redis:6379

# JWT Configuration
JWT_SECRET=changeme_super_secret_jwt_key_for_production_use_256_bits_minimum

# VAPID Keys for Push Notifications (Generate with: npx web-push generate-vapid-keys)
VAPID_PUBLIC_KEY=your_vapid_public_key_here
VAPID_PRIVATE_KEY=your_vapid_private_key_here
VAPID_EMAIL=admin@foodconnect.com

# Application URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3001

# Node Environment
NODE_ENV=production

# SSL Configuration (for production)
SSL_CERT_PATH=/etc/nginx/ssl/certificate.crt
SSL_KEY_PATH=/etc/nginx/ssl/private.key

# Monitoring and Logging
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn_here

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# File Upload Configuration
MAX_FILE_SIZE=50MB
UPLOAD_PATH=/app/uploads

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100