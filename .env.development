# FoodConnect Development Environment Configuration

# ==========================================
# Database Configuration
# ==========================================
POSTGRES_DB=foodconnect_dev
POSTGRES_USER=foodconnect
POSTGRES_PASSWORD=dev_password_123
DATABASE_URL=file:./dev.db

# ==========================================
# Redis Configuration (opcional para dev)
# ==========================================
REDIS_PASSWORD=dev_redis_123
REDIS_URL=redis://localhost:6379

# ==========================================
# JWT & Security Configuration
# ==========================================
JWT_SECRET=development_secret_key_for_foodconnect_app_minimum_256_bits_long
JWT_EXPIRATION=24h
JWT_REFRESH_EXPIRATION=7d

# ==========================================
# VAPID Keys for Push Notifications (dev)
# ==========================================
VAPID_PUBLIC_KEY=dev_vapid_public_key
VAPID_PRIVATE_KEY=dev_vapid_private_key
VAPID_EMAIL=dev@foodconnect.local

# ==========================================
# Application Configuration
# ==========================================
NODE_ENV=development
PORT=3001
FRONTEND_PORT=8081

# URLs for CORS and API communication
FRONTEND_URL=http://localhost:8081
BACKEND_URL=http://localhost:3001
API_PREFIX=api

# ==========================================
# File Upload Configuration
# ==========================================
MAX_FILE_SIZE=10485760
UPLOAD_DEST=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/gif

# ==========================================
# Development Specific
# ==========================================
LOG_LEVEL=debug
ENABLE_CORS=true
ENABLE_SWAGGER=true